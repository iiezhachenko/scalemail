#!/usr/bin/env ruby

require 'optparse'
require 'methadone'
require_relative '../lib/scalemail'

# Application entry point
class App
  include Methadone::Main
  include Methadone::CLILogging

  main do
    hosts = Config.instance.hosts options[:dmachine_config]
    prov = Provisioner.instance
    prov.provision hosts
  end

  # supplemental methods here

  # Declare command-line interface here

  # description "one line description of your app"
  #
  # Accept flags via:
  # on("--flag VAL","Some flag")
  # options[flag] will contain VAL
  #
  # Specify switches via:
  # on("--[no-]switch","Some switch")
  #
  # Or, just call OptionParser methods on opts
  #
  # Require an argument
  # arg :some_arg
  #
  # # Make an argument optional
  # arg :optional_arg, :optional

  opts.on('-m FILE', '--docker-machine-config FILE',
          'Configuration file with Docker Machine hosts description') do |file|
    options[:dm_config] = file
  end

  version Scalemail::VERSION

  use_log_level_option toggle_debug_on_signal: 'USR1'

  go!
end
